<% if feed.errors.present? %>
  <ul id="error_explanation">
    <% feed.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="post-form">
  <%= form_with(model: feed, local: true, url: choose_new_or_edit) do |f| %>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", id: "feed_description" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <div class="form-image">
        <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      </div>
      <div>
        <%= f.file_field :image, class: "form-control", id: "feed_image" %>
      </div>
      <%= f.hidden_field :image_cache %>
    </div>
    <%= f.submit "投稿", class: "post-button" %>
  <% end %>
</div>